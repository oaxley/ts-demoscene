doctype html
html
    head
        title= title
        link(rel='stylesheet' type="text/css" href='/css/main.css')
    body
        .content
            .left-pane

            .center-pane
                .top-pane
                    h1#title #{title}

                .middle-pane
                    canvas#output(width="640", height="480")
                        p Your browser does not support canvas

                .bottom-pane
                    .credits
                        div#effect-name
                        div#effect-desc

                    .logo
                        h3 presented by
                        img(src="/images/assets/server.logo.png", alt="by Oaxley")

            .right-pane

            a.prev#prev &#10094
            a.next#next &#10095

        script(src='/js/main.bundle.js')